<% provide(:title, t(".title")) %>
<h1><%= t ".title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:sessions, url: login_path) do |f| %>
      <%= f.label :email, t(".label_email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t(".label_password") %>
      <%= link_to t(".forgot_password"), password_resets_new_path %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.submit t(".title"), class: "btn btn-primary" %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t ".cookies" %></span>
      <% end %>
    <% end %>
    <p>
      <span><%= t ".question" %></span>
      <span><%= link_to t(".path"), signup_path %></span>
    </p>
  </div>
</div>
