<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user,
  size: Settings.avatar.size_users), micropost.user %>
  <span class="user"><%= link_to micropost.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= t(".posted", time: time_ago_in_words(micropost.created_at)) %>
    <% if current_user? micropost.user %>
      <%= link_to t("users.user.delete"), micropost, method: :delete,
      data: {confirm: t("users.user.confirm_delete")} %>
    <% end %>
  </span>
</li>
